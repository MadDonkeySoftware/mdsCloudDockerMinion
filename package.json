{
  "name": "mds-cloud-docker-minion",
  "version": "1.0.0",
  "description": "A worker minion to handle docker specific work from the mdsCloudServerlessFunctions application",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && copyfiles -f -V ./src/infrastructure/grpc/protos/*.proto ./dist/infrastructure/grpc/protos",
    "clean": "rimraf ./dist",
    "dev": "concurrently -c green,blue -n server,db \"wait-on tcp:27017 && npm run dev:server\" \"docker compose down -v && docker compose up -V\"",
    "dev:server": "NODE_ENV=localdev ts-node-dev --respawn --pretty --transpile-only src/presentation/server.ts",
    "dev:server:elk": "NODE_ENV=localdev ts-node-dev --respawn --pretty --transpile-only src/presentation/server.ts | mds-log-pump",
    "test": "NODE_ENV=test jest",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:cov:watch": "npm run test:watch:cov",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:watch:cov": "NODE_ENV=test jest --watchAll --coverage",
    "lint": "eslint 'src/**'",
    "pretty:check": "prettier -c ./src",
    "pretty": "prettier -w ./src",
    "format": "npm run pretty",
    "prebuild": "npm run clean",
    "prepublish:setup": "npm run clean && npm run build && node dist/setup-package.js && rimraf ./dist/setup-package.js ./dist/setup-package.d.ts",
    "publish:setup": "echo 'ready to publish from dist folder!'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MadDonkeySoftware/mdsCloudDockerMinion.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MadDonkeySoftware/mdsCloudDockerMinion/issues"
  },
  "homepage": "https://github.com/MadDonkeySoftware/mdsCloudDockerMinion#readme",
  "dependencies": {
    "@fastify/awilix": "^3.1.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/swagger": "^8.7.0",
    "@fastify/swagger-ui": "^1.9.2",
    "@fastify/type-provider-typebox": "^2.4.0",
    "@grpc/grpc-js": "^1.5.5",
    "@grpc/proto-loader": "^0.6.9",
    "@maddonkeysoftware/mds-cloud-sdk-node": "^0.2.9",
    "@sinclair/typebox": "^0.25.10",
    "@tsconfig/node18": "^1.0.1",
    "awilix": "^8.0.1",
    "config": "^3.3.8",
    "dockerode": "^4.0.0",
    "fastify": "^4.10.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "luxon": "^2.3.0",
    "mds-log-pump": "^0.0.6",
    "mongodb": "^4.3.1",
    "pino": "^8.14.1",
    "shelljs": "^0.8.5",
    "tar-fs": "^2.1.1",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/dockerode": "^3.3.19",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/luxon": "^3.3.0",
    "@types/shelljs": "^0.8.12",
    "@types/tar-fs": "^2.0.1",
    "@types/unzipper": "^0.10.6",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^7.6.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.1.6",
    "eslint-plugin-prettier": "^4.2.1",
    "form-data": "^4.0.0",
    "jest": "^29.3.1",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3",
    "wait-on": "^7.0.1"
  }
}
